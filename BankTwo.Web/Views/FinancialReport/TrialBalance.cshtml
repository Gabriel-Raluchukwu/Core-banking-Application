@using ViewModels
@model FinancialReport
@{
    ViewBag.Title = "TrialBalance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    decimal CustomersAccountBalance = 0.0M;
    decimal LoanAccountBalance = 0.0M;
    decimal TotalDebit = 0.0M;
    decimal TotalCredit = 0.0M;
}
<div id="page-wrapper">
    <div class="row card-heading">
        <div class="col-lg-12">
            <h2 class="text-center">FINANCIAL REPORT</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <br/>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="text-center card-heading">
                    <h3>Trial Balance</h3>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-sm">
                        <thead>
                            <tr>
                                <th class="text-center">ACCOUNT</th>
                                <th class="text-center">DEBITS (N)</th>
                                <th class="text-center">CREDITS (N)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center"><b>Assets</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var account in Model.AssetAccounts)
                            {
                                TotalDebit = TotalDebit + account.AccountBalance;
                                <tr>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                    <td class="text-center"></td>
                                </tr>
                            }
                            <tr>
                                <td class="text-center"><b>Loan Accounts Balance</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var loan in Model.LoanAccounts)
                            {
                                LoanAccountBalance = LoanAccountBalance + loan.LoanPrincipal;
                                TotalDebit = TotalDebit + loan.LoanPrincipal;

                            }
                            <tr>
                                <td class="text-center"><b>Loan Account Balance</b></td>
                                <td class="text-center">@Math.Round(LoanAccountBalance,2)</td>
                                <td class="text-center"></td>
                            </tr>
                            <tr>
                                <td class="text-center"><b>Income</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var account in Model.IncomeAccounts)
                            {
                                TotalCredit = TotalCredit + account.AccountBalance;
                                <tr>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center"></td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                </tr>
                            }

                            <tr>
                                <td class="text-center"><b>Expenses</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>

                            @foreach (var account in Model.ExpenseAccounts)
                            {
                                TotalDebit = TotalDebit + account.AccountBalance;
                                <tr>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                    <td class="text-center"></td>
                                </tr>
                            }

                            <tr>
                                <td class="text-center"><b>Liabilities</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var account in Model.LiabilitiesAccounts)
                            {
                                TotalCredit = TotalCredit + account.AccountBalance;
                                <tr>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center"></td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                </tr>
                            }
                            <tr>
                                <td class="text-center"><b>Customers Account</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var account in Model.CustomerAccounts)
                            {
                                CustomersAccountBalance = CustomersAccountBalance + account.AccountBalance;
                                TotalCredit = TotalCredit + account.AccountBalance;

                            }
                            <tr>
                                <td class="text-center"><b>Customers Account Balance</b></td>
                                <td class="text-center"></td>
                                <td class="text-center">@Math.Round(CustomersAccountBalance,2)</td>
                            </tr>
                            <tr>
                                <td class="text-center"><b>Capital</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>
                            @foreach (var account in Model.CapitalAccounts)
                            {
                                TotalCredit = TotalCredit + account.AccountBalance;
                                <tr>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center"></td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                </tr>
                            }

                            <tr>
                                <th class="text-center text-danger"><b>TOTAL</b></th>
                                <th class="text-center text-danger"><b>@Math.Round(TotalDebit,2)</b></th>
                                <th class="text-center text-danger"><b>@Math.Round(TotalCredit,2)</b></th>
                            </tr>

                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>


