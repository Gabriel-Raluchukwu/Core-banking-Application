@using ViewModels
@model FinancialReport
@{
    ViewBag.Title = "ProfitAndLoss";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    decimal TotalIncome = 0.0M;
    decimal TotalExpense = 0.0M;
    decimal Profit;
}

<div id="page-wrapper">
    <div class="row card-heading">
        <div class=" col-lg-12">
            <h2 class="text-center">FINANCIAL REPORT</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <br/>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="card-heading">
                    <h3 class="text-center">PROFIT AND LOSS</h3>
                </div>
                <!-- /.panel-heading -->
                <div class="">
                    <table width="100%" class="table table-striped table-bordered table-sm">
                        <thead>
                            <tr>
                                <th class="text-center">ACCOUNT CATEGORY</th>
                                <th class="text-center">ACCOUNT NAME</th>
                                <th class="text-center">ACCOUNT BALANCE (N)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center text-danger"><b>Income</b></td>
                                <td></td>
                                <td></td>
                            </tr>
                            @foreach (var account in Model.IncomeAccounts)
                            {
                                 TotalIncome = TotalIncome + account.AccountBalance;
                                <tr>
                                    <td class="text-center"></td>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                </tr>
                            }
                            <tr>
                                <th><b></b></th>
                                <th class="text-center text-danger"><b>TOTAL INCOME</b></th>
                                <th class="text-center text-danger"><b>@Math.Round(TotalIncome,2)</b></th>
                            </tr>
                            <tr>
                                <td class="text-center text-danger"><b>Expenses</b></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                            </tr>

                            @foreach (var account in Model.ExpenseAccounts)
                            {
                                TotalExpense = TotalExpense + account.AccountBalance;
                                <tr>
                                    <td></td>
                                    <td class="text-center">@account.GLAccountName</td>
                                    <td class="text-center">@Math.Round(account.AccountBalance,2)</td>
                                </tr>
                            }
                            <tr>
                                <th class="text-center"><b></b></th>
                                <th class="text-center text-danger"><b>TOTAL EXPENSES</b></th>
                                <th class="text-center text-danger"><b>@Math.Round(TotalExpense,2)</b></th>
                            </tr>
                            <tr>
                                @{ 
                                    Profit = TotalIncome - TotalExpense;
                                }
                                <th class="text-center text-danger"><b>Profit/Loss</b></th>
                                <th class="text-center"><b></b></th>
                                <th class="text-center text-danger"><b>@Math.Round(Profit,2)</b></th>
                            </tr>

                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
