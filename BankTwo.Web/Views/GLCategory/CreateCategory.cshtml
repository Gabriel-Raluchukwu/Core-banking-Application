@using ViewModels
@model GLCategoryViewModel
@{
    ViewBag.Title = "GENERAL LEDGER CATEGORY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center card-heading">@ViewBag.Title</h2>
<hr />
<div class="card-heading">
    <span class="secondary-header">
        Create GL Category
    </span>
</div>
<hr />
<div>
    @using (Html.BeginForm("CreateCategory", "GLCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            @Html.LabelFor(m => m.MainCategoryEnum, new { @class = "col-md-2 col-form-label text-md-right" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.MainCategoryEnum, "Select Main Category", new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.MainCategoryEnum)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.GLCategoryName, new { @class = "col-form-label text-md-right col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.GLCategoryName, new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.GLCategoryName)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.GLCategoryDescription, new { @class = "col-md-2 col-form-label text-md-right col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.GLCategoryDescription, new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.GLCategoryDescription)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary col-md-6" value="CREATE CATEGORY" />
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

