
@{
    ViewBag.Title = "BUSINESS OPERATIONS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center card-heading">@ViewBag.Title</h2>
<hr />
<div class="card-heading">
    <span class="secondary-header">
        Open or Close Business
    </span>
</div>
<hr />
<div>
    <br />
    <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-form-label col-md-10">
            @Html.ActionLink(linkText: "OPEN BUSINESS", actionName: "OpenBusiness", controllerName: "EOD", routeValues: null, htmlAttributes: new { @class = "btn btn-primary col-md-10" });
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-form-label col-md-10">
            @Html.ActionLink(linkText: "CLOSE BUSINESS", actionName: "CloseBusiness", controllerName: "EOD", routeValues: null, htmlAttributes: new { @class = "btn btn-primary col-md-10" });
        </div>
    </div>
</div>
