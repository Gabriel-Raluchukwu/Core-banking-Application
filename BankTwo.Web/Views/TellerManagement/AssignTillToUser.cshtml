@using ViewModels
@model TellerRoleViewModel
@{
    ViewBag.Title = "TELLER MANAGEMENT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center card-heading">@ViewBag.Title</h2>
<hr />
<div class="card-heading">
    <span class="secondary-header">
        Add Teller Account to User
    </span>
</div>
<hr />
<div>
    @using (Html.BeginForm("AssignTillToUser", "TellerManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <div class="col-md-2"> </div>
            <div class="col-md-10">
                @Html.ActionLink(linkText: "Select User", actionName: "SelectUserAccount", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary col-md-10" });

            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.GLAccountId, new { @class = "col-form-label text-md-right col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.GLAccountId, new SelectList(Model.GLAccounts, "Id", "GLAccountName"), "Select Till Account", new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.GLAccountId)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary col-md-6`" value="ASSIGN TILL" />
            </div>
        </div>
    @Html.HiddenFor(m => m.UserId)
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>



