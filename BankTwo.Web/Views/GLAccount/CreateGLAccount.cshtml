@using ViewModels
@model GLAccountViewModel
@{
    ViewBag.Title = "GENERAL LEDGER ACCOUNT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center card-heading">@ViewBag.Title</h2>
<hr />
<div class="card-heading">
    <span class="secondary-header">
        Create GL Account
    </span>
</div>
<hr />
<div>
    @using (Html.BeginForm("CreateGLAccount", "GLAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            @Html.LabelFor(m => m.GLAccountName, new { @class = "col-form-label text-md-right col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.GLAccountName, new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.GLAccountName)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.GLCategoryId, new { @class = "col-md-2 col-form-label text-md-right" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.GLCategoryId, new SelectList(Model.GLCategories, "Id", "GLCategoryName"), "Select GL Category", new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.GLCategoryId)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.BranchId, new { @class = "col-md-2 col-form-label text-md-right" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.BranchId, new SelectList(Model.Branches, "Id", "Location"), "Select Branch", new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(m => m.BranchId)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary col-md-6" value="CREATE ACCOUNT" />
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

