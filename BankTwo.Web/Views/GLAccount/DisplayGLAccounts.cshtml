@using ViewModels
@model IEnumerable<GLAccountDisplayViewModel>
@{
    ViewBag.Title = "GENERAL LEDGER ACCOUNT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center card-heading">@ViewBag.Title</h2>
<div class="box">
    <hr />
    <div class="box-header card-heading">
        <h3 class="box-title">General Ledger Accounts</h3>
    </div>
    <hr />
    <!-- /.box-header -->
    <div class="box-body">
        <div class="input-group m-md-2">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </span>
            </div>
            <input id="SearchInput" class="form-control" type="text" placeholder="Search by Account Code..." onkeyup="SearchFunction()" />
        </div>
        <table id="Table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>GL Account Name</th>
                    <th>GL Account Code</th>
                    <th>GL Category</th>
                    <th>Branch</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.GLAccountName</td>
                        <td>@account.GLAccountCode</td>
                        <td>@account.GLCategoryName</td>
                        <td>@account.BranchLocation</td>
                        <td>
                            @Html.ActionLink("EDIT", "EditGLAccount", "GLAccount", new { id = account.EncryptedId }, new { @class = "btn btn-outline-primary btn-sm m-0 waves-effect" })@*|@Html.ActionLink("DELETE", "DeleteGLAccount", "GLAccount", new { id = account.EncryptedId }, new { @class = "btn btn-default" })*@
                        </td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>GL Account Name</th>
                    <th>GL Account Code</th>
                    <th>GL Category</th>
                    <th>Branch</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryTable")

